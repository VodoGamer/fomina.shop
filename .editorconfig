root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.{json,yml,yaml,ts,tsx}]
indent_style = tab
indent_size = 2

[docker-compose.yml]
indent_size = space

[package.json]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
